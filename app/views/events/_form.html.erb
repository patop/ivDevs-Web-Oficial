<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :type_event %><br>
    <%= f.select(:type_event, Event.type_events.keys.map {|k| [k.titleize,k]}) %>
  </div>
  <div class="field">
    <%= f.label :tag_id %><br>
    <%= f.text_field :tag_id %>
  </div>
  <div class="field">
    <%= f.label :date_event %><br>
    <%= f.datetime_select :date_event %>
  </div>
  <div class="field">
    <%= f.label :hour_start %><br>
    <%= f.time_select :hour_start %>
  </div>
  <div class="field">
    <%= f.label :hour_finish %><br>
    <%= f.time_select :hour_finish %>
  </div>
  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
